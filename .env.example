# ===========================================
# SAT Backend - LOCAL DEVELOPMENT
# ===========================================

# -----------------
# Database
# -----------------
DATABASE_URL="postgresql://postgres:admin@localhost:5432/sat_db?schema=public"

# -----------------
# Server Configuration
# -----------------
PORT=5000
NODE_ENV=development

# -----------------
# CORS Configuration
# -----------------
CORS_ORIGIN=http://localhost:3000

# -----------------
# Clerk Authentication
# -----------------
# Get these from: https://dashboard.clerk.com/
CLERK_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE
CLERK_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE


# -----------------
# Session Configuration
# -----------------
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_SESSIONS=5

# -----------------
# AI Service
# -----------------
AI_PROVIDER=openai
AI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY_HERE
AI_MODEL=gpt-4o

# -----------------
# Logging
# -----------------
LOG_LEVEL=debug

# -----------------
# Rate Limiting
# -----------------
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100

# -----------------
# Webhook Security
# -----------------
CLERK_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# -----------------
# AWS S3 Configuration
# -----------------
# Get these from: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID_HERE
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY_HERE
AWS_REGION=us-east-1
AWS_S3_BUCKET=sat-dt-bucket


# ===========================================
# LOCAL DEVELOPMENT NOTES:
# - Uses localhost URLs
# - Debug logging enabled
# - Test Clerk keys (pk_test_, sk_test_)
# - S3 credentials needed for file uploads
# ===========================================
